@model DetailsModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

<div class="mtd-store-style-header">
    <div class="mtd-store-style-badge">
        @if (Model.MtdStore.MtdFormNavigation.MtdFormHeader != null)
        {
            var base64 = Convert.ToBase64String(Model.MtdStore.MtdFormNavigation.MtdFormHeader.Image);
            var imgSrc = String.Format("data:{0};base64,{1}", Model.MtdStore.MtdFormNavigation.MtdFormHeader.ImageType, base64);

            <img src="@imgSrc" />
        }
        <div class="mtd-store-style-title">
            @Model.MtdStore.MtdFormNavigation.Name
        </div>
    </div>

    <div class="mtd-store-style-attribute">
        @if (Model.MtdStore.MtdFormNavigation.VisibleNumber == 1)
        {
            <span class="mtd-store-style-number">№ @Model.MtdStore.Sequence.ToString("D9")</span>
            <hr />
        }

        @if (Model.MtdStore.MtdFormNavigation.VisibleDate == 1)
        {
            <span class="mtd-store-style-date">@Localizer["Date"] @Model.MtdStore.Timecr.ToShortDateString()</span>

        }
    </div>

</div>