@model Core.DocFieldModel

@if (Model != null && Model.Value != null)
{
    var base64 = Convert.ToBase64String((byte[])Model.Value);
    var imgSrc = String.Format("data:{0};base64,{1}", Model.FileType, base64);
   

    switch (ViewBag.typeStyle)
    {
        case "Columns":
            <div class="mtd-store-view-col-root">
                <div class="mtd-store-view-col-name">
                    @Model.Name
                </div>
                <div class="mtd-store-view-col-value">
                    <img src="@imgSrc" style="max-height: 2.2em" />
                </div>
            </div>
            break;
        default:
            <div class="mtd-store-view-row-line">
                <div class="mtd-store-view-row-name">
                    @Model.Name
                </div>
                <div class="mtd-store-view-row-value">
                    <img src="@imgSrc" style="max-height: 2.2em" />
                </div>
            </div>
            break;
    }

}
else
{
    <div class="mtd-store-style-image"></div>
}

