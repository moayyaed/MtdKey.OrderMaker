@model Core.DocFieldModel

@{
    string value = "";
    if (Model != null && Model.Value != null && (int) Model.Value > 0)
    {
        value = ((int)Model.Value).ToString();
    }

    if ((Model.Value == null || value == string.Empty) && Model.DefaultValue != null && Model.DefaultValue != string.Empty)
        value = Model.DefaultValue;
}

@if (!Model.Readonly)
{
    @await Component.InvokeAsync(typeof(MTDTextField), new MTDTextFieldTags
{
    Id = Model.Id,
    Name = $"field-{Model.Id}",
    Value = value,
    Label = Model.Name,
    Required = Model.Required,
    MTDTexFieldView = MTDTextFieldViews.Outlined,
    Type = "number",
    Placeholder = "0",
})
}




