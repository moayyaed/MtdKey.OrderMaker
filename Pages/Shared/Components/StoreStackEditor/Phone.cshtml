@model Core.DocFieldModel

@if (!Model.Readonly)
{
    <div style="display: flex; padding: 8px;">
        <div style="width: 120px">
            @Html.DisplayFor(model => model.Name)
        </div>
        <div style="flex-grow:1;padding-left: 8px; align-self:center">
            <input type="text" id="@Model.Id"
                   name="field-@Model.Id"
                   value="@Model.Value"
                   style="width: 100%;" />
        </div>
    </div>
}


