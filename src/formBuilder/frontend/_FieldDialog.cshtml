@using MtdKey.OrderMaker;
@using Microsoft.AspNetCore.Mvc.Localization
@using MtdKey.OrderMaker.Components.Controls;
@using MtdKey.OrderMaker.Models.Controls.MTDSelectList;
@using MtdKey.OrderMaker.Models.Controls.MTDTextField;
@inject IHtmlLocalizer<FormBuilderLocalizer> localizer;


<div class="modal fade" id="fieldDialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <div style="display: flex; flex-wrap:wrap;">
                    <h5 class="modal-title">@localizer["Field Attribute Editor"]</h5>
                    <div class="formPart_item_title_type ps-2" style="font-size: 1em;">
                    </div>
                </div>

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                @await Component.InvokeAsync(typeof(MTDTextField), new MTDTextFieldTags
                {
                    Id = "fieldName",
                    Name = "fieldName",
                    MTDTexFieldView = MTDTextFieldViews.Outlined,
                    Label = "Field Name",
                    LabelLocalized = true,
                    Required = true,
                })

                <div id="textParams" class="pt-3 d-none">
                    <div class="pt-2">
                        <div class="block-editor">
                            <div class="block-editor-title">@localizer["Field Type"]</div>
                            <div class="form-check form-check-inline form-switch block-editor-checker">
                                <input class="form-check-input" type="checkbox" role="switch" id="swithRequired">
                                <label class="form-check-label" for="swithRequired"> @localizer["Required"]</label>
                            </div>
                            <div class="form-check form-check-inline form-switch block-editor-checker">
                                <input class="form-check-input" type="checkbox" role="switch" id="swithReadonly">
                                <label class="form-check-label" for="swithReadonly"> @localizer["Readonly"]</label>
                            </div>
                        </div>
                    </div>

                    <div class="pt-3">
                        @await Component.InvokeAsync(typeof(MTDTextField), new MTDTextFieldTags
                        {
                            Id = "defaultValue",
                            Name = "defaultValue",
                            MTDTexFieldView = MTDTextFieldViews.Outlined,
                            Label = "Default value",
                            LabelLocalized = true,
                            Required = false,
                        })
                    </div>
                </div>

                <div id="listFormParam" class="pt-3">
                    <div class="form-floating">
                        <select id="selectForm" class="form-select"  aria-label="Floating label select example">
                        </select>
                        <label for="selectForm">List of forms</label>
                    </div>
                </div>
                </div>

                <div class="pt-2 d-none">
                    <div class="block-editor block-editor-adaptive">
                        <div class="block-editor-title">@localizer["Trigger data"]</div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="triggerData" id="radioNotset" checked>
                            <label class="form-check-label" for="radioNotset">
                                @localizer["Not set"]
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="triggerData" id="radioDatetime">
                            <label class="form-check-label" for="radioDatetime">
                                @localizer["Datetime now"]
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="triggerData" id="radioUserGroup">
                            <label class="form-check-label" for="radioUserGroup">
                                @localizer["User group"]
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="triggerData" id="radioUserName">
                            <label class="form-check-label" for="radioUserName">
                                @localizer["User name"]
                            </label>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@localizer["Close"]</button>
                    @*<button type="button" class="btn btn-light text-primary">@localizer["Apply"]</button>*@
                </div>
            </div>
        </div>
    </div>
</div>
